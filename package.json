{
  "name": "easy-toast-js",
  "version": "1.0.2",
  "description": "A simple Toastr notification package using Tailwind CSS and Vanilla JavaScript with no dependencies.",
  "main": "dist/easyToast.min.js",
  "module": "dist/easyToast.esm.js",
  "types": "dist/easyToast.d.ts",
  "scripts": {
    "build": "uglifyjs src/index.js -o dist/easyToast.min.js -c -m --mangle-props",
    "test": "jest",
    "prod": "terser src/index.js -o dist/easyToast.min.js",
    "prepublishOnly": "uglifyjs src/index.js -o dist/easyToast.min.js -c -m --mangle-props"
  },
  "keywords": [
    "toastr",
    "notification",
    "tailwind",
    "vanilla-javascript",
    "cdn",
    "toast",
    "notification",
    "alert",
    "message",
    "popup"
  ],
  "author": "A Awal Hadi",
  "license": "MIT",
  "devDependencies": {
    "terser": "^5.34.1",
    "uglify-js": "^3.14.1"
  },
  "dependencies": {
    "jest": "^29.7.0",
    "uglifyjs": "^2.4.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awalhadi/easy-toast.git"
  }
}
