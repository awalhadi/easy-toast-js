{
  "name": "easy-toast-js",
  "version": "2.0.0",
  "author": "A Awal Hadi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awalhadi/easy-toast.git"
  },
  "main": "dist/easy-toast.umd.js",
  "module": "dist/easy-toast.es.js",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13",
    "terser": "^5.34.1",
    "vite": "^5.4.8"
  },
  "description": "A simple Toastr notification package using Tailwind CSS and Vanilla JavaScript with no dependencies.",
  "keywords": [
    "toastr",
    "notification",
    "tailwind",
    "vanilla-javascript",
    "cdn",
    "toast",
    "notification",
    "alert",
    "message",
    "popup"
  ],
  "license": "MIT",
  "scripts": {
    "build": "vite build && npm run build:css",
    "prod": "terser src/index.js -o dist/easy-toast.min.js",
    "build:css": "postcss ./src/easy-toast.css -o ./dist/easy-toast.min.css"
  },
  "types": "dist/easyToast.d.ts"
}
